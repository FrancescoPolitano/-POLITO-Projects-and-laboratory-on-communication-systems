<Controls:MetroWindow
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    x:Class="GUI.BigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600" BorderThickness="0" GlowBrush="Black"
        >
    <TabControl Width="Auto">
        <TabItem Header="Management">
            <Grid Background="AliceBlue">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Button Name="newUser" Content="Create new User"  Height="60" Width="200" HorizontalAlignment="Center" VerticalAlignment="Center" Click="newUser_Click"/>
                <Button Name="newVisitor" Grid.Row="1" Content="Create new visitor" Height="60" Width="200" HorizontalAlignment="Center" VerticalAlignment="Center" Click="newVisitor_Click"/>
            </Grid>
        </TabItem>
        <TabItem Header="Planimetry">
            <Grid >
                <Grid.Background>
                    <ImageBrush ImageSource="F:\Downloads\planimetry.jpg" Stretch="UniformToFill"/>
                </Grid.Background>
            </Grid>
        </TabItem>
        <TabItem Header="Users">
            <Grid Background="AliceBlue">
                <ListView Name="Users" ItemsSource="{Binding UserList}" Width="Auto" Height="Auto" >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Ellipse Grid.Column ="0" Width="64" Height="64">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="{Binding PathPhoto}" Stretch="Fill" />
                                    </Ellipse.Fill>
                                </Ellipse>
                                <TextBlock Text="{Binding Name}" Grid.Column="1" Margin="3" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Surname}" Grid.Column="2" Margin="3" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Serial}" Grid.Column="3" Margin="3" VerticalAlignment="Center" />
                                <TextBlock Text="{Binding CurrentPosition}" Grid.Column="4" Margin="3" VerticalAlignment="Center" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.ItemContainerStyle>
                        <Style  TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Setter Property="BorderBrush" Value="LightGray" />
                            <Setter Property="BorderThickness" Value="0,0,0,1" />
                            <EventSetter Event="PreviewMouseLeftButtonDown" Handler="ListViewItem_PreviewMouseLeftButtonDown" />
                        </Style>
                        
                    </ListView.ItemContainerStyle>
                </ListView>
            </Grid>
        </TabItem>
        <TabItem Header="History" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="4*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*" />
                        <RowDefinition Height="3*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Controls:DropDownButton Name="Utenti"  Grid.Column="0" Content="Employees" >
                        <Controls:DropDownButton.ItemTemplate>
                            <DataTemplate>
                                <StackPanel DataContext="{Binding}" PreviewMouseDown="Users_CLICK" >
                                    <TextBlock Text="{Binding}" />
                                </StackPanel>
                            </DataTemplate>
                        </Controls:DropDownButton.ItemTemplate>
                    </Controls:DropDownButton>
                    <Controls:DropDownButton Name="Rooms" Grid.Column="1" Content="Rooms" >
                        <Controls:DropDownButton.ItemTemplate>
                            <DataTemplate>
                                <StackPanel DataContext="{Binding}" PreviewMouseDown="Room_click" >
                                    <TextBlock Text="{Binding}" />
                                </StackPanel>
                            </DataTemplate>
                        </Controls:DropDownButton.ItemTemplate>
                    </Controls:DropDownButton>
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="From" />
                    <TextBlock Grid.Row="0" Grid.Column="3" Text="To" />
                    <ListView Name="SelectedEmployees" Grid.Row="1" Grid.Column="0" >
                        <ListView.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Rimuovi" Click="MenuItem_Click_Employees"/>
                            </ContextMenu>
                        </ListView.ContextMenu>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <ListView Name="SelectedRooms" Grid.Row="1" Grid.Column="1" >
                        <ListView.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Rimuovi" Click="MenuItem_Click_Rooms"/>
                            </ContextMenu>
                        </ListView.ContextMenu>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <DatePicker Name="fromDate" Grid.Row="1" Grid.Column="2" SelectedDateChanged="fromDate_SelectedDateChanged"/>
                    <DatePicker Name="toDate" Grid.Row="1" Grid.Column="3" SelectedDateChanged="toDate_SelectedDateChanged"/>
                </Grid>
                <ListView Name="listContent" Grid.Row="1" >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Id" Grid.Column="0" />
                                <TextBlock Text="Nome" Grid.Column="1" />
                                <TextBlock Text="Cognome" Grid.Column="2" />
                                <TextBlock Text="stanza" Grid.Column="3" />
                                <TextBlock Text="orario" Grid.Column="4" />
                                <TextBlock Text="vero/falso" Grid.Column="5" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            <Grid.Resources>
                    <Style TargetType="DatePickerTextBox">
                        <Setter Property="VerticalAlignment" Value="Center" />
                        <Setter Property="IsReadOnly" Value="true" />
                    </Style>
            </Grid.Resources>
            </Grid>
        </TabItem>
    </TabControl>


</Controls:MetroWindow>
