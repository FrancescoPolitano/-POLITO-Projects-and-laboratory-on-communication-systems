<Controls:MetroWindow
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    x:Class="GUI.BigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" BorderThickness="0" GlowBrush="Black"
        >
    <TabControl Width="Auto">
        <TabItem Header="Management">
            <Grid Background="Aqua">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Button Name="newUser" Content="Create new User"  Height="60" Width="200" HorizontalAlignment="Center" VerticalAlignment="Center" Click="newUser_Click"/>
                <Button Name="newVisitor" Grid.Row="1" Content="Create new visitor" Height="60" Width="200" HorizontalAlignment="Center" VerticalAlignment="Center" Click="newVisitor_Click"/>
            </Grid>
        </TabItem>
        <TabItem Header="Planimetry">
            <Grid >
                <Grid.Background>
                    <ImageBrush ImageSource="F:\Downloads\planimetry.jpg" Stretch="UniformToFill"/>
                </Grid.Background>
            </Grid>
        </TabItem>
        <TabItem Header="Users">
            <Grid Background="#FFEAEAEA">
                <ListView Name="Users" ItemsSource="{Binding UserList}" Width="Auto" Height="Auto" >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Ellipse Grid.Column ="0" Width="64" Height="64">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="{Binding ImagePath}" Stretch="Fill" />
                                    </Ellipse.Fill>
                                </Ellipse>
                                <TextBlock Text="{Binding Name}" Grid.Column="1" Margin="3" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Surname}" Grid.Column="2" Margin="3" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Serial}" Grid.Column="3" Margin="3" VerticalAlignment="Center" />
                                <TextBlock Text="{Binding CurrentPosition}" Grid.Column="4" Margin="3" VerticalAlignment="Center" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.ItemContainerStyle>
                        <Style  TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Setter Property="BorderBrush" Value="LightGray" />
                            <Setter Property="BorderThickness" Value="0,0,0,1" />
                            <EventSetter Event="PreviewMouseLeftButtonDown" Handler="ListViewItem_PreviewMouseLeftButtonDown" />
                        </Style>
                        
                    </ListView.ItemContainerStyle>
                </ListView>
            </Grid>
        </TabItem>
       
    </TabControl>


</Controls:MetroWindow>
